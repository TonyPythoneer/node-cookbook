{
    "compilerOptions": {
        "experimentalDecorators": true,
        "target": "es5",
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "sourceMap": true,
        "removeComments": false,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "pretty": true
    },
    "exclude": [
        "node_modules"
    ]
}
